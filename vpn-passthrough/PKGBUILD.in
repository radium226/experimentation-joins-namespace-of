pkgname="vpn-passthrough"
pkgver="0.1.0"
pkgrel=1

source=(
    "ca.rsa.2048.crl" 
    "ca.rsa.2048.crt" 
    "config.env" 
    "internet.nft"
    "vpn-passthrough-connectivity.service"
    "vpn-passthrough-internet.service" 
    "vpn-passthrough-netns.service" 
    "vpn-passthrough-pia.service"
    "pia.txt"
)

